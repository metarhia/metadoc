{
  "name": "@metarhia/doc",
  "version": "0.2.1",
  "author": "Timur Shemsedinov <timur.shemsedinov@gmail.com>",
  "description": "Metarhia Documentation Generator",
  "license": "MIT",
  "keywords": [
    "metarhia",
    "documentation",
    "impress",
    "jstp",
    "globalstorege"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/metarhia/metadoc"
  },
  "main": "doc.js",
  "bin": {
    "metadoc": "./bin/cli.js"
  },
  "readmeFilename": "README.md",
  "scripts": {
    "doc": "./bin/cli.js",
    "lint": "eslint . && prettier -c \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\" \"**/*.yml\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\" \"**/*.yml\"",
    "test": "npm run -s lint && ./bin/cli.js --no-config -d test/ test/example.js"
  },
  "files": [
    "lib/",
    "bin/"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "eslint": "^5.15.3",
    "eslint-config-metarhia": "^7.0.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "1.16.x"
  },
  "dependencies": {
    "@metarhia/common": "^1.3.0",
    "yargs": "^12.0.5"
  }
}
